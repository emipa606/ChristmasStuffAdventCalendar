  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>CSGingerbreadHouse</defName>
    <label>Gingerbread house</label>
    <description>A gingerbread house is a novelty confectionery shaped like a building that is made of cookie dough, cut and baked into appropriate components like walls and roofing.</description>
    <graphicData>
      <texPath>Things/14th/HouseGingerbread</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <drawRotated>false</drawRotated>
      <allowFlip>false</allowFlip>
    </graphicData>
    <castEdgeShadows>false</castEdgeShadows>
    <altitudeLayer>Building</altitudeLayer>
    <rotatable>false</rotatable>
    <fillPercent>0.20</fillPercent>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <WorkToBuild>6000</WorkToBuild>
      <Mass>2</Mass>
      <Flammability>1.0</Flammability>
