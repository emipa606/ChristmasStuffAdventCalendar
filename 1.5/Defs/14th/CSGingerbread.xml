<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--Plants-->
  <ThingDef ParentName="PlantBase">
    <defName>CSGingerRootPlant</defName>
    <label>Ginger root</label>
    <graphicData>
      <texPath>Things/14th/PlantGingerRoot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <description>A plant producing ginger roots for gingerbread.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.18</Nutrition>
    </statBases>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <ingestible />
    <plant>
      <fertilityMin>0.70</fertilityMin>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>CSRawGinger</harvestedThingDef>
      <harvestYield>10</harvestYield>
      <growDays>5</growDays>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <sowMinSkill>4</sowMinSkill>
      <dieIfLeafless>true</dieIfLeafless>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>0.7~1.1</visualSizeRange>
      <wildOrder>2</wildOrder>
      <purpose>Food</purpose>
    </plant>
  </ThingDef>
  <!--Items-->
  <ThingDef ParentName="ResourceBase">
    <defName>CSRawGinger</defName>
    <label>Ginger</label>
    <description>Ginger is a very popular spice and it is a fragrant kitchen spice</description>
    <graphicData>
      <texPath>Things/14th/RootGinger</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <stackLimit>75</stackLimit>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <MarketValue>1.1</MarketValue>
      <Mass>0.3</Mass>
      <Flammability>0.9</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>CSFoodCat</li>
    </thingCategories>
  </ThingDef>
  <ThingDef ParentName="ResourceBase">
    <defName>CSIcing</defName>
    <label>Icing</label>
    <description>A sweet thing used for decorating gingerbread cookies and gingerbread houses.</description>
    <graphicData>
      <texPath>Things/14th/Icing</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stackLimit>150</stackLimit>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <MarketValue>0.5</MarketValue>
      <Mass>0.3</Mass>
      <Flammability>0.9</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>CSFoodCat</li>
    </thingCategories>
  </ThingDef>
  <!--Gingerbread-->
  <ThingDef ParentName="MealCooked">
    <defName>CSGingerbread</defName>
    <label>Gingerbread</label>
    <description>Yummy. Gingerbread fulfills the need for recreation and can be used as a building material.</description>
    <graphicData>
      <texPath>Things/14th/Gingerbread</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <stackLimit>75</stackLimit>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MarketValue>10</MarketValue>
      <WorkToMake>350</WorkToMake>
      <Nutrition>0.3</Nutrition>
    </statBases>
    <ingestible>
      <joy>0.13</joy>
      <joyKind>Gluttonous</joyKind>
      <preferability>DesperateOnly</preferability>
      <tasteThought>CSAteGingerbread</tasteThought>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
      <maxNumToIngestAtOnce>2</maxNumToIngestAtOnce>
    </ingestible>
  </ThingDef>
  <ThingDef ParentName="MealCooked">
    <defName>CSGingerbreadMen</defName>
    <label>Gingerbread men</label>
    <description>Yummy. The Gingerbread men fulfills the need for recreation and can be used as a building material.</description>
    <graphicData>
      <texPath>Things/14th/MenGingerbread</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <stackLimit>25</stackLimit>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MarketValue>10</MarketValue>
      <WorkToMake>350</WorkToMake>
      <Nutrition>0.4</Nutrition>
    </statBases>
    <ingestible>
      <joy>0.17</joy>
      <joyKind>Gluttonous</joyKind>
      <preferability>DesperateOnly</preferability>
      <tasteThought>CSAteGingerbread</tasteThought>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
      <maxNumToIngestAtOnce>2</maxNumToIngestAtOnce>
    </ingestible>
  </ThingDef>
  <!--AteThought-->
  <ThoughtDef>
    <defName>CSAteGingerbread</defName>
    <durationDays>1</durationDays>
    <stages>
      <li>
        <label>ate gingerbread</label>
        <description>That gingerbread was amazing. It nourished my body and my soul.</description>
        <baseMoodEffect>1</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <!--Recipes-->
  <RecipeDef>
    <defName>CSMake_Icing</defName>
    <label>make icing</label>
    <description>Make icing from sugar.</description>
    <jobString>Making icing.</jobString>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Brewing</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1000</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>CSSugar</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>CSSugar</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <CSIcing>15</CSIcing>
    </products>
    <recipeUsers>
      <li>FueledStove</li>
      <li>ElectricStove</li>
    </recipeUsers>
  </RecipeDef>
