<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--Presents-->
  <ThingDef Name="PresentBase" Abstract="True">
    <designationCategory>Furniture</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <tradeTags>
      <li>Furniture</li>
    </tradeTags>
    <category>Building</category>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>Filth_RubbleBuilding</filthLeaving>
    <thingCategories>
      <li>BuildingsFurniture</li>
    </thingCategories>
    <building>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>Weapons</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
  </ThingDef>
  <ThingDef ParentName="PresentBase">
    <defName>CSPresentRed</defName>
    <label>Present (red)</label>
    <thingClass>Building_Storage</thingClass>
    <graphicData>
      <texPath>Things/20th/RedPresent</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <drawRotated>false</drawRotated>
      <allowFlip>false</allowFlip>
    </graphicData>
    <!--<altitudeLayer>Building</altitudeLayer>-->
    <altitudeLayer>Item</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <costList>
      <Cloth>15</Cloth>
    </costList>
    <statBases>
      <Mass>4</Mass>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>300</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(1,1)</size>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <designationHotKey>Misc12</designationHotKey>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <description>A present for storing miscellaneous items. Items stored in this will not deteriorate, even if outside.</description>
    <tickerType>Rare</tickerType>
    <pathCost>30</pathCost>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
  </ThingDef>
