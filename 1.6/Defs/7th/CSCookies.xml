<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--Categories-->
  <ThingCategoryDef>
    <defName>CSCookieCat</defName>
    <label>Cookies</label>
    <parent>FoodMeals</parent>
    <iconPath>Things/7th/CookieChocolate/CookieChocolate_a</iconPath>
  </ThingCategoryDef>
  <!--Cookies-->
  <ThingDef ParentName="MealCooked">
    <defName>CSPCookie</defName>
    <label>Plain cookie</label>
    <description>Yummy. A simple cookie and it fulfills the need for recreation.</description>
    <graphicData>
      <texPath>Things/7th/CookiePlain</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <stackLimit>25</stackLimit>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MarketValue>10</MarketValue>
      <WorkToMake>350</WorkToMake>
      <Nutrition>0.3</Nutrition>
    </statBases>
    <ingestible>
      <joy>0.10</joy>
      <joyKind>Gluttonous</joyKind>
      <preferability>DesperateOnly</preferability>
      <tasteThought>CSAtePCookie</tasteThought>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
      <maxNumToIngestAtOnce>2</maxNumToIngestAtOnce>
    </ingestible>
    <thingCategories>
      <li>CSCookieCat</li>
    </thingCategories>
  </ThingDef>
