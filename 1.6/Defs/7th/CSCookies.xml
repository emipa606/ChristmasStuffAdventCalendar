        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>EggsUnfertilized</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <CSPCookie>10</CSPCookie>
    </products>
    <recipeUsers>
      <li>FueledStove</li>
