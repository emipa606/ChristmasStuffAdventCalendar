  <!--AteThought-->
  <ThoughtDef>
    <defName>CSAtePCookie</defName>
    <durationDays>1</durationDays>
    <stages>
      <li>
        <label>ate cookie</label>
        <description>That christmas cake was amazing. It nourished my body and my soul.</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
