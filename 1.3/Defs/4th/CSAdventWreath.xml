  <!--off-->
  <ThingDef ParentName="BuildingBase">
    <defName>CSAdventWreathA</defName>
    <label>Advent wreath (off)</label>
    <description>The Advent wreath is a Christian tradition that symbolizes the passage of the four weeks of Advent in the liturgical calendar of the Western church. It is usually a horizontal evergreen wreath with four candles. Beginning with the First Sunday of Advent the first candle is lit. An additional candle is lit during each subsequent week until, by the last Sunday before Christmas, all four candles are lit.</description>
    <graphicData>
      <texPath>Things/4th/AdventWreath</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawRotated>false</drawRotated>
      <damageData>
        <rect>(0.35,0.35,0.3,0.3)</rect>
      </damageData>
    </graphicData>
    <uiIconPath>Things/4th/AdventWreath</uiIconPath>
    <category>Building</category>
    <rotatable>false</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>8</pathCost>
    <constructEffect>ConstructWood</constructEffect>
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <fillPercent>0.15</fillPercent>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToBuild>100</WorkToBuild>
      <Flammability>0</Flammability>
    </statBases>
    <selectable>true</selectable>
    <costList>
      <WoodLog>5</WoodLog>
    </costList>
    <soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
    <designationCategory>Furniture</designationCategory>
    <designationHotKey>Misc10</designationHotKey>
    <designatorDropdown>CSAWreathDropDown</designatorDropdown>
  </ThingDef>
